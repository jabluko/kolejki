{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                " -std=c++20 " ,
                " -pedantic " ,
                " -Wall " ,
                " -Wextra " ,
                " -Wformat-security " ,
                " -Wduplicated-cond " ,
                " -Wfloat-equal " ,
                " -Wshadow " ,
                " -Wconversion " ,
                " -Wlogical-not-parentheses " ,
                " -Wnull-dereference " ,
                " -fstack-protector-strong " ,
                " -fsanitize=undefined " ,
                " -fno-sanitize-recover " ,
                " -fsanitize=address " ,
                " -ggdb3 " ,
                " -fno-omit-frame-pointer " ,
                " -DLOCAL " ,
                " -O0 ",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}